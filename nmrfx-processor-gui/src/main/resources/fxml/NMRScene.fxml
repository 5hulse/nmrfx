<HBox prefHeight="600.0" prefWidth="900.0" styleClass="mainFxmlClass" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nmrfx.processor.gui.FXMLController">
    <children>
        <BorderPane fx:id="mainBox" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <stylesheets>
                <URL value="@/styles/Styles.css" />
            </stylesheets>
            <top>
                <VBox fx:id="topBar" GridPane.hgrow="ALWAYS">
                    <children>
                        <ToolBar fx:id="toolBar" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <items>
                            </items>
                        </ToolBar>
                    </children>
                </VBox>
            </top>
            <center>
                <BorderPane fx:id="borderPane" HBox.hgrow="ALWAYS">
                    <top>
                    </top>
                    <center>
                        <StackPane fx:id="chartPane" prefHeight="1000" VBox.vgrow="ALWAYS" />
                    </center>
                    <right>
                        <GridPane fx:id="rightBox" BorderPane.alignment="CENTER">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <VBox fx:id="phaserBox" fillWidth="false" GridPane.columnIndex="0" GridPane.hgrow="NEVER" GridPane.vgrow="ALWAYS">
                                </VBox>
                            </children>
                        </GridPane>
                    </right>
                </BorderPane>
            </center>
            <right>
            </right>
            <bottom>
                <VBox fx:id="bottomBox">
                    <children>
                        <ToolBar fx:id="btoolBar">
                            <items>
                                <Pane HBox.hgrow="ALWAYS" />
                            </items>
                        </ToolBar>
                    </children>
                </VBox>
            </bottom>
        </BorderPane>
        <Separator orientation="VERTICAL" />
        <StackPane fx:id="processorPane" VBox.vgrow="ALWAYS" />
    </children>
        
</HBox>
